{
  "name": "test-please",
  "version": "0.0.0",
  "description": "A parallel-testing framework wannabe",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/client/client.js"
  },
  "bin": {
    "test-please": "./dist/bin/bin.js"
  },
  "types": "./dist/client/client.d.ts",
  "sideEffects": false,
  "scripts": {
    "compile:clean": "rimraf dist",
    "compile:declaration": "tsc --emitdeclarationonly",
    "compile:transpile": "esbuild --target=esnext --outdir=dist src/**/*.ts src/**/**/*.ts",
    "compile:library": "run-p -s compile:declaration compile:transpile",
    "compile": "run-s -s compile:clean compile:library",
    "lint:tsc": "tsc --noemit",
    "lint:xo": "xo",
    "lint": "run-p -s lint:*"
  },
  "engines": {
    "node": ">=12.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macarie/test-please.git"
  },
  "author": {
    "name": "Raul Macarie",
    "email": "raul@macarie.me",
    "url": "https://macarie.me"
  },
  "bugs": {
    "url": "https://github.com/macarie/test-please/issues"
  },
  "homepage": "https://github.com/macarie/test-please#readme",
  "keywords": [],
  "devDependencies": {
    "@types/node": "^16.3.2",
    "@types/sade": "^1.7.3",
    "esbuild": "^0.12.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5",
    "xo": "^0.41.0"
  },
  "dependencies": {
    "@macarie/batch": "^1.2.1",
    "kleur": "^4.1.4",
    "sade": "^1.7.4"
  },
  "xo": {
    "prettier": true
  },
  "prettier": {
    "semi": false,
    "bracketSpacing": true,
    "useTabs": false,
    "endOfLine": "lf",
    "trailingComma": "es5"
  }
}
